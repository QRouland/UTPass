{
    "template": "cmake",
    "kill": "UTPass",
    "scripts": {
    "style": "echo 'Astyle :' && astyle --options=.astylerc main.cpp && astyle --options=.astylerc --recursive 'plugins/*.cpp,*.h' && echo 'QmlFmt :' && qmlfmt -l tests && qmlfmt -w tests && qmlfmt -l qml && qmlfmt -w qml"
    },
    "libraries": {
        "gpg": {
            "template": "cmake",
            "make_jobs": 4,
            "dependencies_build": [
                "texinfo",
                "gpgsm",
                "bison"
            ]
        },
        "quazip": {
            "template": "cmake",
            "make_jobs": 4
        },
        "libgit2": {
            "template": "cmake",
            "make_jobs": 4,
            "build_args": "-DBUILD_SHARED_LIBS=OFF"
        }
    }
}
